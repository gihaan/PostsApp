<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.gihan.postsapp.BlogSingleActivity">


<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"

    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/image_single_activity"
        android:src="@mipmap/add_btn"
        android:layout_marginTop="50dp"
        android:scaleType="centerCrop"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/title_single_activity"
        android:text="post title here"
        android:textSize="16dp"
        android:layout_marginTop="5dp"
        android:textStyle="bold"
        android:padding="15dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/descrption_singel_activity"
        android:text="post descrption here "
        android:textStyle="bold"
        android:padding="15dp"
        />
</LinearLayout>

    <Button
        android:id="@+id/delet_post"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/colorPrimary"
        android:padding="20dp"
        android:text="Remove Post"
        android:textColor="#ffffff"
        android:textColorLink="@color/cardview_shadow_end_color" />


</RelativeLayout>
